<?xml version='1.0' encoding='utf-8'?>
<widget id="com.easy.100meter-race" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>跑完一百米</name>
    <description>
        加油，比比看谁先跑完一百米！
    </description>
    <author email="zhongzhu@ymail.com" href="http://zhongzhu.github.io/">
        钟柱
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <preference name="Orientation" value="landscape" />
    <preference name="Fullscreen" value="true" />
    
    <platform name="android">
        <plugin name="org.crosswalk.engine" spec="1.3.0" source="pgb" />
        <preference name="android-minSdkVersion" value="17"/>
        <preference name="android-targetSdkVersion" value="22"/>
        <allow-intent href="market:*" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>    
</widget>
