<?xml version='1.0' encoding='utf-8'?>
<widget id="com.easy.meterrace" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>跑完一百米</name>
    <description>
        加油，比比看谁先跑完一百米！
    </description>
    <author email="zhongzhu@ymail.com" href="http://zhongzhu.github.io/">
        钟柱
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="landscape" />
    <preference name="Fullscreen" value="true" />
    <icon src="www/assets/icon/icon.png" />

    <preference name="SplashScreen" value="screen" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="1500"/>
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />

    <platform name="android">
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-targetSdkVersion" value="22" />
        <allow-intent href="market:*" />
        <splash density="land-hdpi" src="www/assets/splash/splash-land-hdpi.png" />
        <splash density="land-ldpi" src="www/assets/splash/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="www/assets/splash/splash-land-mdpi.png" />
        <splash density="land-xhdpi" src="www/assets/splash/splash-land-xhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="com.darktalker.cordova.screenshot" spec="https://github.com/gitawego/cordova-screenshot.git" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="https://github.com/crosswalk-project/cordova-plugin-crosswalk-webview.git" />
    <preference name="CrosswalkAnimatable" value="true" />
    <preference name="xwalkVersion" value="xwalk_core_library_beta:18+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />    
    <plugin name="cordova-plugin-nativeaudio" spec="~3.0.7" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.2" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.3" />
</widget>
